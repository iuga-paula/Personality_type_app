@model IEnumerable<PersonalityTypeApplication.Models.Recomandation>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>


<table class="table" align="center">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Personality.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            Recomandation type
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Link)
        </th>
        <th width="200"></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Personality.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RecomandationType)
        </td>
        <td>
            <a target="_blank" href="@Html.DisplayFor(modelItem => item.Link)">Visit!</a>
        </td>
        @*<td>*@
            @if (User.Identity.Name.Equals("admin@yahoo.com"))
            {
                <div>
                    @Html.ActionLink("Create New", "Create", new { id = item.Id }, null) |
                    @Html.ActionLink("Edit", "Edit", "Personalities", new { id = item.Id }, null) |
                    @Html.ActionLink("Details", "Details", "Personalities", new { id = item.Id }, null) |
                    @Html.ActionLink("Delete", "Delete", "Personalities", new { id = item.Id }, null)
                </div>
            }
        @*</td>*@
    </tr>
}

</table>